{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "baseUrl": "./",
        "outDir": "build",
        "target": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types",
            "./src/types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/public/"
    ]
}